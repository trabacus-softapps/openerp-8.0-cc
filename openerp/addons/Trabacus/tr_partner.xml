        <record id="view_partners_form_tr" model="ir.ui.view">
            <field name="name">view.res.partner.form.tr.inherited</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field eval="18" name="priority"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name = "group_id" placeholder = "Group..." domain="[('company_id', '=', company_id), ('customer', '=', context.get('customer')), ('supplier', '=', context.get('supplier'))]"/> 
                </xpath>
                <field name="ref" position="replace"/>
                <field name="function" position="replace"/>
                
                <field name="country_id" position="replace"/>
                <xpath expr="//div[@class='address_format']" position="replace">
                    <div class="address_format">
                        <field name="zip" placeholder="ZIP" style="width: 49%%" attrs="{'readonly': [('use_parent_address','=',True)]}"/>
                        <field name="country_id" placeholder="Country" options='{"no_open": True}' style="width: 49%%"/>
                        <field name="state_id" class="oe_no_button" placeholder="State" style="width: 49%%" options='{"no_open": True}' domain="[('country_id', '=', country_id)]" attrs="{'readonly': [('use_parent_address','=',True)]}"/>
                        <field name="city_id" placeholder="City" style="width: 49%%" attrs="{'readonly': [('use_parent_address','=',True)]}" domain="[('state_id', '=', state_id)]"/>                        
                    </div>
                </xpath>
                 
                <xpath expr="//notebook/page/field[@name='child_ids']/form/sheet/group[2]/div[2]/field[@name='country_id']" position="replace"/>
                <xpath expr="//notebook/page/field[@name='child_ids']/form/sheet/group[2]/div[2]/div[@class='address_format']" position="replace">
                    <div class="address_format">
                        <field name="zip" placeholder="ZIP" style="width: 49%%" attrs="{'readonly': [('use_parent_address','=',True)]}"/>
                        <field name="country_id" placeholder="Country" options='{"no_open": True}' style="width: 49%%"/>
                        <field name="state_id" class="oe_no_button" placeholder="State" style="width: 49%%" options='{"no_open": True}' domain="[('country_id', '=', country_id)]" attrs="{'readonly': [('use_parent_address','=',True)]}"/>
                        <field name="city_id" placeholder="City" style="width: 49%%" attrs="{'readonly': [('use_parent_address','=',True)]}" domain="[('state_id', '=', state_id)]"/>                        
                    </div>
                </xpath>
                
                <field name="parent_id" position="before">
                    <div attrs="{'invisible': [('customer', '=', False)]}">
                    <label for="ref" string="Customer ID"/>
                        <field name="ref" readonly="1" attrs="{'invisible': [('customer', '=', False)]}"  class="oe_inline trab_inc_width" style="width:100%%"/>
                    </div>
                </field>
                
                
                <xpath expr="//field[@name='child_ids']" position="attributes">
                    <attribute name="context">{'default_parent_id': active_id, 'default_street': street, 'default_street2': street2, 'default_city_id': city_id, 'default_state_id': state_id, 'default_zip': zip, 'default_country_id': country_id, 'default_supplier': supplier, 'default_customer': customer}</attribute>
                </xpath>
                
                 <xpath expr="//form[@string='Contact']/sheet" position="inside">
                    <field name="customer" invisible="1"/>                        
                    <notebook>
                        <page string="Passport Info" attrs="{'invisible': [('customer', '=', False)]}">
                        
                        <group name="passport" col="6" colspan="2">
                            <field name="passport_no"/>
                            <field name="nation"/>
                            <field name="place_issue"/>
                            <field name="valid_from"/>
                            <field name="valid_till"/>
                            <field name="dob"/>
                        </group>
                        <separator string="Misc Info"/>
                        <group name="miscinfo" col="6" colspan="2">
                            <field name="anniversary"/>
                            <field name="meal_pref"/>
                        </group>
                        <field name="remarks" placeholder="Add Customer Remarks..."/>
                    </page>
                    
                        <page string="Frequent Flyer" attrs="{'invisible': [('customer', '=', False)]}">
                        <field colspan="4" mode="tree" name="flyer_ids" nolabel="1"
                            widget="one2many_list">
                            <tree string="Frequent Flyer" editable="top">
                                <field name="name"/>
                                <field name="airline_id"/>
                            </tree>
                        </field>
                    </page>
                    </notebook>
                </xpath>

                <page string="Internal Notes" position="replace">
                    <page string="Market Segment" attrs="{'invisible': [('customer', '=', False)]}">
                        <group name="segment" col="6" colspan="2">
                            <field name="industry"/>
                            <field name="credit_rating"/>
                            <field name="function" string="Designation"/>
                        </group>
                    </page>

                    <page string="Statement" attrs="{'invisible': [('customer', '=', False)]}">
                        <field colspan="4" mode="tree" name="stmt_ids" nolabel="1"
                            widget="one2many_list">
                            <tree string="Statement" editable="top">
                                <field name="name"/>
                                <field name="cycle_start"/>
                                <field name="cs_period"/>
                                <field name="cycle_end"/>
                                <field name="ce_period"/>
                                <field name="stmt_day"/>
                                <field name="day_period"/>
                                <field name="cutoff"/>
                                <field name="co_period"/>
                                <field name="credit_days"/>
                            </tree>
                        </field>
                    </page></page>

                

                <page string="Accounting" position="after">
                    <page string="History">
                        <group name="customer" attrs="{'invisible': [('customer', '=', False)]}">
                            <group colspan="4">
                                <label for="lead_ids"/>
                                <field colspan="4" mode="tree" name="lead_ids" readonly="1"
                                    nolabel="1" widget="one2many_list"/>
                            </group>
                            <group colspan="4">
                                <label for="sale_ids"/>
                                <field colspan="4" mode="tree" name="sale_ids" readonly="1"
                                    nolabel="1" widget="one2many_list"/>
                            </group>
                            <group colspan="4">
                                <label for="invoice_ids"/>
                                <field colspan="4" mode="tree" name="invoice_ids" readonly="1"
                                    nolabel="1" widget="one2many_list"/>
                            </group>
                            <group colspan="4">
                                <label for="credit_ids"/>
                                <field colspan="4" mode="tree" name="credit_ids" readonly="1"
                                    nolabel="1" widget="one2many_list"/>
                            </group>
                            <group colspan="4">
                                <label for="receipt_ids"/>
                                <field colspan="4" mode="tree" name="receipt_ids" readonly="1"
                                    nolabel="1" widget="one2many_list"/>
                            </group>
                        </group>
                        <group name="tpartner" attrs="{'invisible': [('customer', '=', True)]}">
                            <group colspan="4">
                                <label for="purchase_ids"/>
                                <field colspan="4" mode="tree" name="purchase_ids" readonly="1"
                                    nolabel="1" widget="one2many_list"/>
                            </group>
                            <group colspan="4">
                                <label for="sinvoice_ids"/>
                                <field colspan="4" mode="tree" name="sinvoice_ids" readonly="1"
                                    nolabel="1" widget="one2many_list"/>
                            </group>
                            <group colspan="4">
                                <label for="debit_ids"/>
                                <field colspan="4" mode="tree" name="debit_ids" readonly="1"
                                    nolabel="1" widget="one2many_list"/>
                            </group>
                            <group colspan="4">
                                <label for="payment_ids"/>
                                <field colspan="4" mode="tree" name="payment_ids" readonly="1"
                                    nolabel="1" widget="one2many_list"/>
                            </group>
                        </group>
                    </page>
                </page>


                <page string="Sales &amp; Purchases" position="before">
                    <page string="Information" attrs="{'invisible': [('supplier', '=', False)]}">
                        <group name="taxdetails">
                            <group>
                                <field name="tpartner_type" />
                                    <!-- attrs="{'required': [('customer', '=', False)]}" --> 
                                <field name="pan_no"/>
                                <field name="dest_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="tax_no"/>
                                <field name="sec"/>
                            </group>
                        </group>
                    </page>
                </page>

                <xpath expr="//notebook[last()]" position="inside">
                    <page string="Other Details">
                        <field name="comment"/>
                    </page>
                </xpath>

            </field>
        </record>


