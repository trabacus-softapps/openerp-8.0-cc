<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        
        <menuitem id="menu_trabuser_config" name="Configuration" parent="menu_trabacus_config" sequence="1" groups="Trabacus.group_trconfig_admin"/>
        
<!--	^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^ 
        	Trabacus Configuration
        ^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^  -->

        <record id="view_trabacus_config_settings" model="ir.ui.view">
            <field name="name">trabacus settings</field>
            <field name="model">trabacus.config.settings</field>
            <field name="arch" type="xml">
                <form string="Configure Trabacus" version="7.0" class="oe_form_configuration">
                    <header>
                        <button string="Apply" type="object" name="execute" class="oe_highlight"/>
                        or
                        <button string="Cancel" type="object" name="cancel" class="oe_link"/>
                    </header>
                    
                    <separator string="Accounting &amp; Finance"/>
                    <group>
                        <label for="id" string="Partner"/>
                        <div name="partner_config">
                            <div>
                                <field name="create_partyledger" />
                                <label for="create_partyledger"/>
                            </div>
                            <div>
                                <group attrs="{'invisible': [('create_partyledger','=',False)]}" >
                                    <div>
                                        <label for="parent_receivable_id"/>
                                        <field name="parent_receivable_id" nolabel="1" class="oe_inline" attrs="{'required': [('create_partyledger','=',True)]}"/>
                                    </div>
                                    <newline/>
                                    <div>
                                        <label for="parent_payable_id"/>
                                        <field name="parent_payable_id" nolabel="1" class="oe_inline" attrs="{'required': [('create_partyledger','=',True)]}"/>
                                    </div>
                                </group>
                            </div>
                            <div>
                                <group>
                                    <div>
                                        <label for="receivable_id"/>
                                        <field name="receivable_id" nolabel="1" class="oe_inline"/>
                                    </div>
                                    <newline/>
                                    <div>
                                        <label for="payable_id"/>
                                        <field name="payable_id" nolabel="1" class="oe_inline"/>
                                    </div>
                                </group>
                            </div>
                        </div>
                    </group>
                    <separator string="Flights"/>
                    <group>
                        <label for="showall_details" string="Flights"/>
                        <div name="flight_config">
                            <div>
                                <field name="showall_details" />
                                <label for="showall_details"/>
                            </div>
                        </div>
                    </group>
                </form>
            </field>
        </record>
 
        <record id="action_trabacus_config" model="ir.actions.act_window">
            <field name="name">Configure Trabacus</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">trabacus.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
        </record>
   
        <menuitem id="menu_trabacus_settings" name="Trabacus" parent="menu_trabuser_config"
            sequence="1" action="action_trabacus_config"/>
        
          
   </data>
</openerp>


