<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
  <!--	^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^
       				Inherited: company  
  		^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^	-->
        <record id="view_tr_company_form" model="ir.ui.view">
            <field name="name">view_tr_company_form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//form/sheet/group/field[@name='parent_id']" position="after">
                        <field name = "display_compname" required="1"/>
                        <field name = "comp_code" required="1"/>
                    </xpath>
                    <xpath expr="//group[@string='Accounting']" position="after">
                        <group name="window" string="Window">
                            <field name="window_inv"/>
                            <field name="window_journal" invisible="1"/>
                            <field name="window_voucher"/>
                            <field name="window_bankcash" />
                            <field name="window_move"/>
                        </group>
                    </xpath>
                    <xpath expr="//field[@name='city']" position="replace">
                        <field name = "city_id"/> 
                    </xpath>
                    <xpath expr="//page[@string='General Information']" position="after">
                        <page string="Supplier Systems">
                            <field mode="tree" name='tplogin_ids' nolabel="1" colspan="4">
                                <tree string="Supplier Systems" editable="top">
                                    <field name="tpsystem_id" required="1"/> 
                                    <field name="branch_pcc" required="1"/> 
                                </tree>
                            </field>
                        </page>
                    </xpath>
                   <!-- <xpath expr="//group[@string='Accounting']" position="inside">
                        <field name="tac_id" help="Map Account to pass separate the Jounral Entry"/>
                        <field name="tds_payable_id" help="Map Account to pass separate the Jounral Entry"/>
                        <field name="tds_receivable_id" help="Map Account to pass separate the Jounral Entry"/>
                        <field name="discount_id" help="Map Account to pass separate the Jounral Entry"/>
                    </xpath>-->
                </data>
            </field>
        </record>
        
<!--	^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^
       				Inherited: Users  
  		^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^	-->
        <record id="view_form_res_users" model="ir.ui.view">
            <field name="name">view_form_res_users</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <data>
                	<xpath expr="//field[@name='active']" position="after">
                		<field name="tr_rptmanager_id"/>
                	</xpath>
                    <xpath expr="//page[@string='Access Rights']" position="attributes">
                        <attribute name="groups">base.group_system</attribute>
                    </xpath>
                    <xpath expr="//field[@name='company_ids']" position="replace"/>
                    <xpath expr="//group[@string='Allowed Companies']" position="replace"/>
                    <page string="Preferences" position="before">
                        <page string="Access Rights">
                            <group string="Allowed Companies" groups="base.group_multi_company">
                                <field name="company_ids" nolabel="1" widget="many2many_tags"/>
                                
                            </group>
                            <group string="Team Users" invisible = "1">
                                <field name="team_ids" invisible = "1" nolabel="1" widget="many2many_tags"/>
                            </group>
                            <group>
                                <group string="Access Rights" >
                                    <field name="tr_lead"/>
                                    <field name="tr_sale"/>
                                    <field name="tr_accounting"/>
                                    <field name="tr_product"/>
                                    <field name="tr_config"/>
                                    <field name="tr_purchase" invisible="1"/>
                                </group>
                                <group string="Order-Invoice Permissions" >
                                    <field name= "validate_ok"/>
                                </group> 
                            </group>
                        </page>
                        <page string="Supplier Systems">
                            <field mode="tree" name='tplogin_ids' nolabel="1" colspan="4">
                                <tree string="Supplier Systems" editable="top">
                                    <field name="tpsystem_id" required="1"/> 
                                    <field name="login" required="1"/> 
                                </tree>
                            </field>
                        </page>
                        <page string="Incentives">
                            <field mode="tree" name='tr_incentive_ids' nolabel="1" colspan="4">
                                <tree string="Incentives" editable="top">
                                    <field name="service_type"/> 
                                    <field name="manager_id"/> 
                                    <field name="incentive"/> 
                                   
                                </tree>
                            </field>
                        </page>
                        
                    </page>
                </data>
            </field>
        </record>
        
    </data>
</openerp>