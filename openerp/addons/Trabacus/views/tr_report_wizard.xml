        <!--	~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
       		                 Outstanding Report   
  		        ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~	-->

        <record id="tr_outstanding_report" model="ir.ui.view">
            <field name="name">tr_outstanding_report</field>
            <field name="model">tr.outstanding.report</field>
            <field name="arch" type="xml">
                <form string="Outstanding Report" version="7.0">

                    <group name="action" col="4" colspan="2">
                        <field name="rpt_type" required="1"/>
                        <field name="type" required="1" on_change="onchange_type(type,group_id)"/>
                        <field name="end_date" required="1"/><newline/>
                        <field name="company_id" invisible="0"/>
                        <field name="group_id" /><field name="account_analytic_id" />
                       
                        <field name="category_id" invisible="1"/>
                    </group>
                    <newline/>
                    <separator string="Partner" attrs="{'invisible':[('type','=','customer')]}"/>
                    <field name="tpartner_ids" colspan="4" nolabel="1"
                        domain="[('supplier','=','1'),('group_id','=',group_id)]"
                        attrs="{'invisible':[('type','=','customer')]}" widget="many2many_tags"/>
                    <separator string="Customer" attrs="{'invisible':[('type','=','supplier')]}"/>
                    <field name="customer_ids" colspan="4" nolabel="1"
                        domain="[('supplier','=','1'),('group_id','=',group_id)]"
                        attrs="{'invisible':[('type','=','supplier')]}" widget="many2many_tags"/>
                    <footer>
                        <button name="print_report" string="Print" type="object"
                            class="oe_highlight"/> or <button string="Cancel" class="oe_link"
                            special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_tr_outstanding_report" model="ir.actions.act_window">
            <field name="name">Outstanding Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tr.outstanding.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
