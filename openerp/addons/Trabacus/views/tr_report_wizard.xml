        <!--	~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
       		             Dalily Receips And Payments   
  		        ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~	-->

        <record id="tr_daily_payment_receipt" model="ir.ui.view">
            <field name="name">tr_daily_payment_receipt</field>
            <field name="model">tr.payment.receipt</field>
            <field name="arch" type="xml">
                <form string="Payment / Receipts" version="7.0">

                    <group name="action" col="6" colspan="2">
                        <field name="start_dt" required="1"/>
                        <field name="end_dt" required="1"/>
                        <field name="company_id" required="1"/>
                    </group>
                    <group name="type" col="6" colspan="2">
                        <field name="type" required="1" on_change="onchange_type(type, group_id, company_id)"/>
                        <field name="group_id" />
                        <field name="partner_id" required="0" domain="[('group_id','=',group_id)]"/>
                    </group>
                    
                    <footer>
                        <button name="print_report" string="Print" type="object"
                            class="oe_highlight"/> or <button string="Cancel" class="oe_link"
                            special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_tr_daily_payment_receipt" model="ir.actions.act_window">
            <field name="name">Payment Receipts</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tr.payment.receipt</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="tr_daily_payment_receipt"/>
            <field name="target">new</field>
        </record>


        <!--	~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
       		             Sales Detailed Report   
  		        ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~	-->

        <record id="tr_sales_detail_report" model="ir.ui.view">
            <field name="name">tr_sales_detail_report</field>
            <field name="model">tr.sales.detail</field>
            <field name="arch" type="xml">
                <form string="Sales Detail / Report" version="7.0">

                    <group name="action" col="6" colspan="3">
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="company_id"/>
                        <field name="type"/>
                        <field name="travel_type"/> 
                        <field name="airline_id"  attrs="{'invisible':[('travel_type','not in',('dom_flight','int_flight'))]}" />
                        <field name="product_id"  attrs="{'invisible':[('travel_type','in',('dom_flight','int_flight'))]}" domain="[('travel_type','=',context.get('travel_type'))]" />
                        <field name="consultant_id"/>
                        <field name="group_id"  domain="[('company_id','=',context.get('company_id')),('customer','=','1')]" />
                        <field name="customer_id" domain="[('customer','=','1'),('group_id','=',group_id)]"/>
                        <field name="account_analytic_id"/>
                        
                    </group>
                    <footer>
                        <button name="print_report" string="Print" type="object" class="oe_highlight"/>
                        or <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_tr_sales_detail_report" model="ir.actions.act_window">
            <field name="name">Sales Detailed</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tr.sales.detail</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="tr_sales_detail_report"/>
            <field name="target">new</field>
        </record>

                <menuitem icon="STOCK_PRINT" parent="menu_tr_reportsales" id="menu_tr_sales_detail_report"   name="Sales &amp; Refund Detail" action="action_tr_sales_detail_report"  sequence="1"  
                	groups="Trabacus.group_traccount_manager"/>

