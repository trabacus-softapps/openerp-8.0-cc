<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <!--	~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
       		                         General Ledger   
  		        ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~	-->

        <record id="account_report_general_ledger_view_tr" model="ir.ui.view">
            <field name="name">account_report_general_ledger_view_tr</field>
            <field name="model">account.report.general.ledger</field>
            <field name="inherit_id" ref="account.account_report_general_ledger_view"/>
            <field name="arch" type="xml">
                <data> 
                    <xpath expr="//field[@name='display_account']" position="after">
                        <field name="partner_id" on_change="onchange_partner_id(partner_id)"
                            domain="[('parent_id','=',False)]" required="context.get('client_heading')" />
                        <field name="account_id" on_change="onchange_account(account_id)" invisible="context.get('client_heading')"/>
                        <field name="account_analytic_id"/>
                    </xpath>
                    <xpath expr="//field[@name='amount_currency']" position="after">
                        <field name="client_heading" invisible="1"/>
                    </xpath>
                </data>
            </field>
        </record>

        <!--	~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
       		                         Client Statement
  		        ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~	-->

        <record id="action_account_client_statement_menu" model="ir.actions.act_window">
            <field name="name">Client Statement</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">account.report.general.ledger</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="account.account_report_general_ledger_view"/>
            <field name="context">{'client_heading':True}</field>
            <field name="target">new</field>
        </record>

        <record model="ir.values" id="action_account_client_statement_values">
            <field name="model_id" ref="account.model_account_account"/>
            <field name="name">Client Statement</field>
            <field name="key2">client_print_multi</field>
            <field name="value"
                eval="'ir.actions.act_window,' +str(ref('action_account_client_statement_menu'))"/>
            <field name="key">action</field>
            <field name="model">account.account</field>
        </record>

<!-- Info : Menu Item Given in tr_report_wizard.xml-->

        <!--	~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
       		                         Report Journals
  		        ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~	-->

        <record id="account_tr_report_print_journal" model="ir.ui.view">
            <field name="name">Account Print Tr Journal</field>
            <field name="model">account.print.journal</field>
            <field name="inherit_id" ref="account.account_report_print_journal"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='filter']" position="replace"/>
                    <xpath expr="//field[@name='journal_ids']" position="replace"/>
                    <xpath expr="//separator[@string='Journals']" position="replace"/>
                    <xpath expr="//form/group" position="after">
                        <separator string="Journals"  colspan="4" attrs="{'invisible':[('journal_type', 'not in', ('all_other'))]}"/>
                        <field name="journal_ids" colspan="4" nolabel="1" required="0" attrs="{'invisible':[('journal_type', 'not in', ('all_other'))]}"/>
                    </xpath>
                    <xpath expr="//form/group" position="after">
                        <group>
                            <group string="Filter">
                                <field name="filter" on_change="onchange_filter(filter, fiscalyear_id)"/>
                                <field name="account_analytic_id"/>
                                <field name="journal_type" on_change="onchange_journaltype(journal_type)" required="1" />
                            </group>
                            <group string="Dates" attrs="{'invisible':[('filter', '!=', 'filter_date')], 'required':[('filter', '=', 'filter_date')]}">
                                <field name="date_from"/>
                                <field name="date_to"/>
                            </group>
                        </group>
                    </xpath>
                    <xpath expr="//field[@name='period_from']" position="attributes">
                        <attribute name="required">0</attribute>
                        <attribute name="invisible">1</attribute>
                    </xpath>
                    <xpath expr="//field[@name='period_to']" position="attributes">
                        <attribute name="required">0</attribute>
                        <attribute name="invisible">1</attribute>
                    </xpath>
                    <xpath expr="//separator[@string='Periods']" position="attributes">
                        <attribute name="invisible">1</attribute>
                    </xpath>

                </data>
            </field>
        </record>

    </data>
</openerp>
