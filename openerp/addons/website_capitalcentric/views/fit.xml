                                                        <input id="contact_name" style="width:100%;padding-left:1%" required="True" class="input-control operator_inputs" type="text" name="name" title=""/>
                                                        <p></p>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <label>Email</label>
                                                        <p></p>
                                                    </td>
                                                    <td>
                                                        <input id="contact_email" style="width:100%;padding-left:1%" required="True" class="input-control operator_inputs" type="email" name="email" placeholder="" title=""/>
