<!--    ==============================================================          
                 Bookings Template for Tour Operator & Venue             
        ==============================================================   -->    
        <template id="bookings" page="True" name="Restaurant Reservations For The Travel Trade">
            <t t-call="website_capitalcentric.capitalcentric_layout">
                <t t-set="ref_content">
                    <t t-set="head">
                        <link rel='stylesheet' href='/website_capitalcentric/static/src/css/search.css'/>
                        <link rel='stylesheet' href='/website_capitalcentric/static/src/css/fit.css'/>
                        <style>
                            #wrapwrap
                            {
                                height: 100%;
                                margin: 0 auto -40px;
                            }
                        </style>
                        <script type="text/javascript" src="/website_capitalcentric/static/src/js/fit.js"/>
                        <script>
                            $(document).ready(function()
                            {
                                $(".datepicker").datepicker({dateFormat: "dd-mm-yy", yearRange: '-99:+0'});
                            }); 
                        </script>
                    </t>
                    <div id="bookinglayout">
                        <t t-call="website_capitalcentric.logo"/>
                        <t t-if="path == 'restaurant'">
                            <t t-call="website_capitalcentric.logo_buttons"/>
                        </t>
                        <t t-if="path == 'operator'">
                            <t t-call = "website_capitalcentric.welcome_operator"/>
                            <t t-call="website_capitalcentric.operator_buttons"/>
                        </t>
                        <p></p>
                        <div style="height:30px;width:100%;display:table;">
                            <span style="display: table-cell;vertical-align: middle;font-size:8pt;color:#c00000;font-style:italic;">* Discretionary service charge removed by customer</span>    
                        <button style="float:right;width:120px;" class="button" id="add_filters_button"><img src="/website_capitalcentric/static/src/img/filled-filter.png" height="15" width="15"> Add Filters </img></button></div>
                        <p></p>
                        <input id="path_for_js" t-att-value="path"/>

<!--  Bookings Filter Table  -->
                        <form name = "bookings_filter_form" id="filter_form" t-att-action="'/capital_centric/'+ path +'/bookings'" method="post" style="padding-top:1%;">
                            <table style="width:100%;table-layout:fixed;">
                                <tr>
                                    <td style="padding-left:1%;padding-right:1%;">
                                        <label> Enquiry No. </label>
                                        <input id="enq_no" name="enq_no." class="input-control input_val" style="display:block;padding-left:4%;" t-att-value="'enq_no.' in vals and vals['enq_no.'] or ''"> </input>   
                                    </td>
                                    <td style="padding-left:1%;padding-right:1%;">
                                        <label> Start Date</label>
                                        <input style="position:initial;padding-left:4%;" id="start_date" name="start_date" t-att-value="'start_date' in vals and vals['start_date'] or ''" type="text" class="datepicker input-control input_val"/>
                                    </td>
                                    <td style="padding-left:1%;padding-right:1%;">
                                        <label> End Date </label>
                                        <input style="position:initial;padding-left:4%;" id="end_date" name="end_date" t-att-value="'end_date' in vals and vals['end_date'] or ''" type="text" class="datepicker input-control input_val"/>
                                    </td>                                    
                                    <t t-if="path=='operator'">
                                        <td style="padding-left:1%;padding-right:1%;">
                                            <label> Restaurant Name </label>
                                            <input id="res_name" name="res_name" class="input-control input_val" style="padding-left:4%;display:block;" t-att-value="'res_name' in vals and vals['res_name'] or ''"> </input>
                                        </td>
                                    </t>
                                    <td style="padding-left:1%;padding-right:1%;">
                                        <label> Guest Name </label>
                                        <input id="guest_name" name="guest_name" class="input-control input_val" style="display:block;padding-left:4%;" t-att-value="'guest_name' in vals and vals['guest_name'] or ''"> </input>
                                    </td>
                                    <td style="padding-left:1%;padding-right:1%;">
                                        <label> Guest Email </label>
                                        <input id="guest_email" type="email" name="guest_email" class="input-control input_val" style="display:block;padding-left:4%;" t-att-value="'guest_email' in vals and vals['guest_email'] or '' "> </input>
                                        <input name="from_which_path" style="display:none;" t-att-value="path"/>                                        
                                    </td>
                                    <!--<t t-if="path == 'operator'">
                                        <td style="padding-left:1%;padding-right:1%;">
                                            <label> Booked By </label>
                                            <select name="bookd_by" style="display:block;padding:2px;" id="bookd_by" class="input-control input_val" title="Booked By">
                                                <option value=""> Select Booked By.. </option>
                                                <t t-foreach = "bookdby_ids or []" t-as='bkd_by'>
                                                    <option t-att-value="bkd_by.id" t-att-selected="'bookd_by' in vals and vals['bookd_by'] == str(bkd_by.id)"><t t-esc="bkd_by.name"/></option>
                                                </t>
                                            </select>
                                        </td>
                                    </t>-->
                                    <td style="padding-left:1%;padding-right:1%;">
                                        <label> Status </label>
                                        <select name="bking_status" style="display:block;padding:2px;" id="bking_status" class="input-control input_val" title="Select Booking Status">
                                            <option value=""> Select Status.. </option>
                                            <t t-if="path == 'restaurant'">
                                                <option t-att-selected="'bking_status' in vals and vals['bking_status'] == 'open' or ''" value="['open','done']"> Confirmed </option>
                                                <option t-att-selected="'bking_status' in vals and vals['bking_status'] == 'cancel' or ''" value="['cancel']"> Cancelled </option>
                                            </t>
                                            <t t-if="path == 'operator'">
                                                <option t-att-selected="'bking_status' in vals and vals['bking_status'] == 'Completed' or ''" value="Completed"> Completed </option>
                                                <option t-att-selected="'bking_status' in vals and vals['bking_status'] == 'Invoiced' or ''" value="Invoiced"> Invoiced </option>
                                                <option t-att-selected="'bking_status' in vals and vals['bking_status'] == 'Paid' or ''" value="Paid"> Paid </option>
                                            </t>
                                        </select>
                                    </td>
                                    <t t-if="path == 'operator'">
                                        <td style="padding-left:1%;padding-right:1%;">
                                            <label> Tour Operator Ref. </label>
                                            <input id="top_ref" name="top_ref" class="input-control input_val" style="display:block;padding-left:4%;" t-att-value="'top_ref' in vals and vals['top_ref'] or ''"> </input>   
                                        </td>
                                    </t>
                                    <t t-if="path == 'restaurant'"> 
                                        <td style="padding-left:1%;padding-right:1%;">
                                            <label> Invoice Status </label>
                                            <select name="inv_status" style="display:block;padding:2px;" id="inv_status" class="input-control input_val" title="Select Invoice Status">
                                                <option value=""> Select Status.. </option>
                                                <option t-att-selected="'inv_status' in vals and vals['inv_status'] == 'open' or ''" value="open"> Received </option>
                                                <option t-att-selected="'inv_status' in vals and vals['inv_status'] == 'paid' or ''" value="paid"> Paid </option>                                                                                        
                                            </select>   
                                        </td>
                                        <td style="padding-left:1%;padding-right:1%;">
                                            <label> Enquiry No. </label>
                                            <input id="enq_no" name="enq_no." class="input-control input_val" style="display:block;padding-left:4%;" t-att-value="'enq_no.' in vals and vals['enq_no.'] or ''"> </input>   
                                        </td>
                                    </t>
                                </tr>
                                <tr>
                                    <t t-if="path == 'operator'">
                                       <td style="padding-left:1%;padding-right:1%;" colspan="2">
                                           <label> Ref. Link </label>
                                           <select id="reflinks" name="reflinks" class="input-control input_val" style="display:block;padding-left:4%;">
                                                 <option value=""> Select Ref. Links </option>
                                                  <t t-foreach="ref_links or []" t-as="ref">
                                                     <option t-att-selected="vals and vals['reflinks'] == ref or ''"> <t t-esc="ref"/> </option>
                                                  </t>
                                           </select>
                                       </td>
                                    </t>
                                    <td style="padding-left:1%;padding-right:1%;">
                                        <t t-if="path == 'restaurant'">
                                            <label> Tour Operator Ref. </label>
                                            <input id="top_ref" name="top_ref" class="input-control input_val" style="display:block;padding-left:4%;" t-att-value="'top_ref' in vals and vals['top_ref'] or ''"> </input>
                                        </t>
                                    </td>
                                    <td/>
                                    <td colspan="4" style="padding-top:1.2%;padding-left:1%;text-align:right;">
                                        <button style="height:24px;width:100px;" type="submit" id = "filter_search" class="button"> Filter </button>&amp;nbsp;&amp;nbsp;&amp;nbsp;
                                        <button style="height:24px;width:100px;" type="button" id = "reset_filter" class="button" onClick="resetForm()"> Reset </button>&amp;nbsp;&amp;nbsp;&amp;nbsp;
                                        <button style="height:24px;width:auto;" type="button" id="btnExport" class="button">Export to Excel</button>&amp;nbsp;&amp;nbsp;&amp;nbsp;
                                    </td>                                    
                                </tr>
                            </table>
                        </form>
                        <t t-call="website_capitalcentric.fit_form"/>
                     </div>
                    <br></br>
                </t>
                <t t-set="ref_content1">
                    <div id="push" style="height:40px;"></div>
                </t>
            </t>
            <div style="height:40px;">
                <t t-call="website_capitalcentric.copyrightsection"/>
            </div>
        </template>
        

<!--   Bookings Table  -->
        <template id="fit_form">
            <p></p>
            <table id="lead_table" style="">
                <tr>
                    <th id="column_id" class="columns_text"> Enquiry No. </th> 
                    <th id="column_dob" class="columns_text"> Booking Date &amp; Time </th>
                    <th id="column_gname" class="columns_text">Restaurant</th>                    
                    <th id="column_to_ref" class="columns_text"> T.O. Ref. </th>
                    <th id="column_guest" class="columns_number"> Guest(s) </th>
                    <th id="column_guest_name" class="columns_text"> Guest Name </th>
                    <th id="column_guest_email" class="columns_text" style="padding-left:0;padding-right:0;"> Guest Email / Contact </th>
                   <!-- <th id="column_ref_link" class="columns_text" style="padding-left:0;padding-right:0;"> Referral Link </th> -->
                    <t t-if="path == 'operator'">
                        <th id="column_guest_name" class="columns_text"> Booked By </th>
                    </t>
                    <th id="column_menu" class="columns_text"> Menu(s) </th>
                    <th id="column_amount" class="columns_number"> Amt.(<t t-esc="symbol"/>) </th>
                    <th id="column_status" class="columns_text"> Status </th>
                    <t t-if="path == 'restaurant'">
                        <th id="column_viewlink" class="columns_text"> Inv. Status</th>
                    </t>
                    <t t-if="path == 'operator'">
                        <th id="" style="width:4%" class="columns_center"></th>
                        <th id="" style="width:2%" class="columns_center"></th>
                        <th id="" style="width:3%" class="columns_center"></th>
                        <th id="column_viewlink" class="columns_center"></th>
                    </t>
                </tr>
                <tr class="alternative_record" t-foreach="lead_ids" t-as="lead"> 
                    <td style="display:none;" id="lead_id"><t t-esc="lead.id"/></td>
                    <td class="singleblock_text"><t t-esc="lead.lead_no"/></td> 
                    <td class="singleblock_text"><t t-esc="lead.conv_dob"></t>&amp;nbsp;&amp;nbsp;<t t-esc="lead.conv_tob"/></td>
                    <td class="singleblock_text"><t t-esc="lead.restaurant_id.name"/></td>                    
                    <td class="singleblock_text"><t t-esc="lead.cust_ref"/></td>
                    <td class="singleblock_number"><t t-esc="lead.covers"/></td>
                    <td class="singleblock_text"><t t-if="lead.title"><t t-esc="lead.title.name"/>&amp;nbsp;</t><t t-esc="lead.partner_name"/>&amp;nbsp;<t t-esc="lead.contact_name"/></td>
                    <td class="singleblock_text" style="padding-left:0;"><t t-esc="lead.email_from"/> / <br/><t t-esc="lead.mobile"/></td>
                    <!--<td class="singleblock_text" id="ref_link" style="padding-left:0;"><t t-esc="lead.referral_link"/></td> -->
                    <t t-if="path == 'operator'">
                        <td class="singleblock_text"><t t-esc="lead.sales_person and lead.sales_person.name or ''"/></td>
                    </t>
                    <td class="singleblock_text"><t t-esc="info_dtls[lead.id]['menus']"/></td>
                    <t t-if="path == 'operator'">
                        <td class="singleblock_number"><t t-esc="info_dtls[lead.id]['to_price']"/><t t-if="lead.is_servccharge"><b>*</b></t></td>
                    </t>
                    <t t-if="path != 'operator'">
                        <td class="singleblock_number"><t t-esc="info_dtls[lead.id]['rest_price']"/><t t-if="lead.is_servccharge"><b>*</b></t></td>
                    </t>
                    <td class="singleblock_text" id="lead_stage">
                        <t t-if="path != 'operator' and lead.stage_id.name in ('Completed','Invoiced','Paid')">Confirmed</t>
                        <t t-if="lead.stage_id.name == 'Lost'">Cancelled</t>
                        <t t-if="path == 'operator' and lead.stage_id.name != 'Lost'"><t t-esc="lead.stage_id.name"/></t></td>
                    <t t-if="path == 'restaurant'">
                        <td class="singleblock_text">
                            <t t-if="lead.invoice_status=='open'">Received</t>
                            <t t-if="lead.invoice_status=='paid'">Paid</t>
                        </td>
                    </t>
                    <t t-if="path == 'operator'">
                        <td class="singleblock_center" style="" id="amend_td">
                            <a disabled="disabled" id="amend" class="main_color bookinginfolink cancel_booking_request" title="Amend"><i style="font-size:1.2em" class="fa fa-pencil-square-o"/></a>
                        </td>
                        <td class="singleblock_center" style="" id="cancel_icon_td">
                            <t t-if="lead.is_cancelled">
                                <a id="make_booking" href="#" class="main_color bookinginfolink make_booking_request" title="Make another booking for this customer"><i style="font-size:1.2em" class="fa fa-plus-square-o"/></a>                                
                            </t>
                            <t t-if="not lead.is_cancelled">
                                <a id="make_booking" t-attf-href="/capital_centric/fit/grid_view?lead_id=#{lead.id}" class="main_color bookinginfolink make_booking_request" title="Make another booking for this customer"><i style="font-size:1.2em" class="fa fa-plus-square-o"/></a>    
                            </t>
                            
                        </td>
                        <td class="singleblock_center" style="" id="cancel_icon_td">
                            <a id="cancel_icon" class="main_color bookinginfolink cancel_booking_request" title="Cancel booking"><i style="font-size:1.2em" class="fa fa-times-circle-o"></i></a>
                        </td> 
                        <td class="singleblock_center" style="padding-left:0;" id="print_voucher">
                            <a id="" t-attf-href="/capital_centric/report/#{lead.id}" class="bookinginfolink print_voucher main_color" title="Print voucher"><i style="font-size:1.2em" class="fa fa-print"></i></a>
                        </td>
                    </t>
                </tr>   
            </table>
            
            
<!--  Dialog Box for Bookings Cancellation Icon in Bookings Table  -->
            <div id="login_fader"/>
            <div class="modal-dialog" id="div3" style="background-color:transparent;width:50%;">
                <div class="modal-content">
                    <div class="modal-header" style="padding:15px;">
                        <h3 class="modal-title"></h3>
                    </div>
                    <div class="modal-body" style="padding:15px;">
                        <t t-call="website_capitalcentric.menu_and_covers"/>
                    </div>
                    <div class="modal-footer" style="margin-top:0;padding:15px;">
                        <p class="alert alert-danger" id="alert_text" style="display:inline-block;width: auto;font-size: 10pt;">
                            <t t-esc="error"/> 
                        </p>  
                        <button type="submit" id="" class="btn btn-priCmary main_bgcolor continue_button" style="color:white;padding: 5px 12px;">Amend Booking</button> 
                        <input type="button" class="btn btn-priCmary" value="Cancel" id="cancel_button_menu_covers" style="display:inline-block;width:84px;background-color:#c00000;color:white;"/>
                    </div>
                </div>
            </div>
        </template>
        
        <template id="menu_and_covers">
            <div class="replaced_div" style="display:inline-block;width:100%;">
                <t t-if="not_allowed">
                    <input id="error_msg" t-att-value="not_allowed" style="display:none;"/>
                </t>
                <span id="info_id" style="display:none;"><t t-esc="info and info.id or False"/></span>
                <table style="width:100%;font-size: 10pt;" class="">
                    <tr>
                        <td style="width:15%;">
                            <p> Enquiry No.</p>
                        </td>
                        <td style="width:3%;text-align:center;">
                            <p> : </p>
                        </td>
                        <td style="width:32%;">
                            <p><t t-esc="lead and lead.lead_no"/></p>
                        </td>
                        <td style="width:15%;">
                            <p> Restaurant </p>
                        </td>
                        <td style="text-align:center;width:3%;">
                            <p> : </p>
                        </td>
                        <td style="width:32%;">
                            <p><t t-esc="lead and lead.restaurant_id.name"/></p>
                        </td>
                    </tr>
                    <tr>
