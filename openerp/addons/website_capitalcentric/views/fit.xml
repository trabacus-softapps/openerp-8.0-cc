                                            <input value="Submit" id="contact_continue_button" type="submit" class="btn btn-priCmary" style="width:70px;background-color:#ad4bc2;color:white;"/>
            <!--                                <input class="btn btn-priCmary cancel_button_cmn" value="Cancel" id="cancel_button" style="width:70px;background-color:#c00000;color:white;"/>-->
                                        </div>
                                    </div>
                                </form>
