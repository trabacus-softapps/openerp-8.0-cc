<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <!--        Web Login Template     -->
        <template id="fit_website.login_layout" inherit_id="website.login_layout" name="Login Layout">
            <xpath expr="t" position="replace">
                <t t-call="website.layout">
                    <t t-set="head">
                        <link href="/fit_website/static/src/css/profile_contact.css" rel='stylesheet'/>
                    </t>
                    <div class="oe_single_form_logo">
                        <div class="login_img_div">
                            <img src="/web/binary/company_logo"/>
                        </div>
                        <hr/>
                        <t t-raw="0"/>
                    </div>
                </t>
            </xpath>
        </template>
        
        
    </data>
</openerp>