<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_invoice_group" model="ir.ui.view">
            <field name="name">Merge Invoices</field>
            <field name="model">account.invoice.group</field>
            <field name="arch" type="xml">
               <form string="Merge orders" version="7.0">
                    <group>
                        <separator string="Are you sure you want to merge these Invoices?"/>
                        <label string="
Please note that: &#10; &#10;
Invoices will only be merged if: &#10;
* Invoices are in draft &#10;
* Invoices belong to the same customer or supplier &#10;
" colspan="4"/>
                    </group>
                    
                    <footer>
                        <button name="merge_invoices" string="Merge Invoices" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <act_window name="Merge Invoices"
            context="{'search_default_draft': 1, 'search_default_approved': False}"
            res_model="account.invoice.group"
            src_model="account.invoice"
            view_mode="form"
            target="new"
            multi="True"
            key2="client_action_multi"
            id="action_view_invoice_group"/>

    </data>
</openerp>

