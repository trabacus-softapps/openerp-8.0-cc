<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <record id="cc_email_compose_wizard_form" model="ir.ui.view"> 
	            <field name="name">cc_email_compose_wizard_form</field>
	            <field name="model">mail.compose.message</field>
	            <field name="inherit_id" ref="mail.email_compose_message_wizard_form"/>
	            <field name="arch" type="xml">	 
	            	<field name="body" position ='replace'>
	            		<field name="body" width='250' height='450'/>
	            	</field>            
		            <field name="partner_ids" widget="many2many_tags_email" position='after'>
		                   <field name='partner_mapping' invisible='1'/>	               
		                   <label for='ccattachment_id' attrs="{'invisible':[('model','!=','crm.lead')]}"/><field name='ccattachment_id' on_change="onchange_attachments(ccattachment_id,attachment_ids)" attrs="{'invisible':[('model','!=','crm.lead')]}"/>
		            </field>
		            <footer position='inside'>
		            	<label for='reminder_time' class="add_bold_css"/> 
		            	<field name='reminder_time'/>Hrs
		            </footer>
	            </field>
	    </record>
	     
	  </data> 
</openerp>