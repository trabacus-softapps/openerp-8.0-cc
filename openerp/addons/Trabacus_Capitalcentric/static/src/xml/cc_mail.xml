<template>
    <t t-extend="mail.thread.message">
        <t t-jquery=".oe_mail_action_model" t-operation="replace">
            <a t-if="widget.options.show_link and widget.show_record_name and widget.ccaction_id" class="oe_mail_action_model" t-attf-href="#model=#{widget.model}&amp;id=#{widget.res_id}&amp;view_type=form&amp;action=#{widget.ccaction_id}">
                <t t-raw="widget.record_name"/> 
            </a>
            
            <a t-if="widget.options.show_link and widget.show_record_name and widget.ccaction_id === false" class="oe_mail_action_model" t-attf-href="#model=#{widget.model}&amp;id=#{widget.res_id}">
                <t t-raw="widget.record_name"/> 
            </a>
        </t>            
    </t>
</template>
