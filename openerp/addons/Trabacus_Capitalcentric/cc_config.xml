            <field name="arch" type="xml">
                <form string="Contact" version="7.0">
                    <sheet>
                        <field name="image" widget="image" class="oe_left oe_avatar"/>
                        <div class="oe_title">

                            <label for="name" class="oe_edit_only"/>
