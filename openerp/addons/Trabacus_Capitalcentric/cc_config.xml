                                        <label for="to_price" string="Tour Operator Price"
                                               groups="Trabacus_Capitalcentric.cc_admin,Trabacus_Capitalcentric.cc_bo" class="oe_inline"/>
                                        <field name="to_price"
                                            groups="Trabacus_Capitalcentric.cc_admin,Trabacus_Capitalcentric.cc_bo,Trabacus_Capitalcentric.cc_client" class="oe_inline"/>                                        

                                    </h2>
                                </div>
