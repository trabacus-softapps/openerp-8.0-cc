                    <field name="covers"/>
                    <field name="active" invisible="1"/>
                </tree>
            </field>
        </record>
        
        <record id="view_cc_events_form" model="ir.ui.view">
            <field name="name">view_cc_events_form</field>
            <field name="model">cc.events</field>
            <field name="arch" type="xml">
                <form string="Events" version="7.0">
                    <sheet>
                        <div class="oe_title">                                                
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" style="width: 70%%" required="1"/>
                            </h1>
                        </div>
                        <div class="oe_right oe_button_box" name="buttons" style="width:290px;">
                            <label for='covers' string='Max. Covers'/><field name='covers'/>
                            <label for="active"/><field name="active"/>  
                            <newline/>                                                       
                        </div>     
                        <group style="width:64%%;">
                            <field name="menu_ids" widget="many2many_tags" context="{'default_food_type':'events'}" domain="[('food_type','=','events'),('partner_id','=',context.get('partner_id'))]"/>
                            <newline/>
                            <field name="remove_htls_to" widget="many2many_tags" domain="[('cc_fit','=',True),('partner_type','=','client')]"/>
                            <field name="show_htls_to"  widget="many2many_tags"  domain="[('cc_fit','=',True),('partner_type','=','client')]"/>                            
                        </group>
                        <table class="table table-condensed table-bordered">
                            <tr>
                                <td></td>
                                <td><label string='Date' style="font-weight: bold;"/></td>
                                <td><label string='Break Fast' style="font-weight: bold;"/></td>
                                <td><label string='Lunch' style="font-weight: bold;"/></td>
                                <td><label string='Afternoon Tea' style="font-weight: bold;"/></td>
                                <td><label string='Dinner' style="font-weight: bold;"/></td>
                            </tr>
                            <tr>
                                <td><label string="From" style="font-weight: bold;"/></td>
                                <td><field name="date_from"/></td>
                                <td><field name="bt_from"/></td>
                                <td><field name="lt_from"/></td>
                                <td><field name="att_from"/></td>
                                <td><field name="dt_from"/></td>                                
                            </tr>
                            <tr>
                                <td><label string="To" style="font-weight: bold;"/></td>
                                <td><field name="date_to"/></td>
                                <td><field name="bt_to"/></td>
                                <td><field name="lt_to"/></td>
                                <td><field name="att_to"/></td>
                                <td><field name="dt_to"/></td>                                
                            </tr>
                        </table>
                        <separator string="Description" colspan="4"/>
                        <field name="description" colspan="4"/>
                    </sheet>
                </form>
            </field>
        </record>
        
