        <record model="ir.ui.view" id="cc_menu_kanban_view">
            <field name="name">cc_menu_kanban_view</field>
            <field name="model">cc.menus</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="to_price"/>
                    <field name="description"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_module_vignette">
                                <a type="open">
                                    <img
                                        t-att-src="kanban_image('cc.menus', 'image', record.id.value)"
                                        class="oe_avatar oe_kanban_avatar_smallbox"/>
                                </a>
                                <div class="oe_module_desc">
                                    <table class="oe_kanban_table">
                                        <tr>
                                            <td class="oe_kanban_title1" align="left"
                                                valign="middle">
                                                <h2>
                                                  <a type="open">
                                                  <field name="name"/>
                                                  </a>
                                                </h2>
                                                <b>
                                                  <i>
                                                  <div
                                                  groups="Trabacus_Capitalcentric.cc_admin,Trabacus_Capitalcentric.cc_bo,Trabacus_Capitalcentric.cc_client"
                                                  t-if="record.to_price.raw_value">Tour Operator
                                                  Price:<field name="to_price"/></div>
                                                  </i>
                                                </b>
                                                <b>
                                                  <i>
                                                  <div groups="Trabacus_Capitalcentric.cc_venues"
                                                  t-if="record.to_price.raw_value">Restaurant
                                                  Price:<field name="rest_price"/></div>
                                                  </i>
                                                </b>
                                                <div t-if="record.description.raw_value"
                                                  >Description: <field name="description"/></div>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

