<?xml version="1.0"?>
<openerp>
    <data>
        <!-- ****************************	Inherited: Lead HTT******************************* -->
        <record model="ir.ui.view" id="view_gop_lead_form">
            <field name="name">view_gop_lead_form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="Trabacus.crmlead_form_view_tr"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <page string="Enquiry" position="after">
                    <page string="GOP-Enquiry">
                        <group colspan="4" col="6">
                            <field name="gop_customer" attrs="{ 'readonly':[('state_id', '=','Confirmed')]}"
                                colspan="4"/>
                        </group>
                        <group colspan="4" col="6">
                            <field name="gop_email" attrs="{ 'readonly':[('state_id', '=','Confirmed')]}"/>
                            <field name="gop_mobile" attrs="{ 'readonly':[('state_id', '=', 'Confirmed')]}"/>
                            <field name="gop_country" attrs="{ 'readonly':[('state_id', '=', 'Confirmed')]}"/>
                            <field name="gop_address" attrs="{ 'readonly':[('state_id', '=', 'Confirmed')]}"/>
                            <field name="gop_zip" attrs="{ 'readonly':[('state_id', '=', 'Confirmed')]}"/>
                            <newline/>
                            <button string="Create Customer" name="create_customer"
                                type="object" colspan="2" icon="gtk-go-forward"/>
                        </group>
                    </page>
                </page>
            </field>
        </record>
    </data>
</openerp>
